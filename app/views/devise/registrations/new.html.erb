<div class="row">
  <div class="col m6 offset-m3 center">
    <h5>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render partial: "shared/devisemes" %>

      <div class="input-field">
        <%= f.text_field :name, autofocus: true, :id => "name", :class => "validate", :placeholder => "Name" %>
      </div>

      <div class="input-field">
        <%= f.email_field :email, :id => "email", :class => "validate", :placeholder => "email" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password, :id => "password", autocomplete: "off", :class => "validate", :placeholder => "password" %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up</button>
      <% end %>
  </div>
</div>








